@model AHMITMTR.Models.Motor

<h2>Hapus Data Motor</h2>

<div class="alert alert-danger">
    <h3>Apakah Anda yakin ingin menghapus data ini?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nama Motor
        </dt>
        <dd class="col-sm-10">
            @Model.VNAMAMOTOR
        </dd>
        <dt class="col-sm-2">
            Jenis Motor
        </dt>
        <dd class="col-sm-10">
            @Model.VJENIS
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="NID" />
        
        <input type="submit" value="Hapus" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Batal</a>
    </form>
</div>