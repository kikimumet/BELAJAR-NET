@model IEnumerable<AHMITMTR.Models.Motor>

@{
    ViewData["Title"] = "Data Motor";
    int no = 1;
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">
                <i class="bi bi-speedometer2 me-2"></i>Daftar Data Motor
            </h5>
            <a asp-action="Create" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle me-1"></i> Tambah Baru
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4 text-center" style="width: 5%;">No</th>
                            <th style="width: 40%;">Nama Motor</th>
                            <th style="width: 30%;">Jenis</th>
                            <th class="text-center" style="width: 25%;">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-center fw-bold text-muted">@(no++)</td>
                                <td class="fw-bold text-dark">@item.VNAMAMOTOR</td>
                                <td>
                                    @if(item.VJENIS == "Sport") {
                                        <span class="badge bg-danger rounded-pill">Sport</span>
                                    } else if (item.VJENIS == "Matic") {
                                        <span class="badge bg-success rounded-pill">Matic</span>
                                    } else {
                                        <span class="badge bg-info text-dark rounded-pill">Bebek</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.NID" 
                                           class="btn btn-outline-warning btn-sm" title="Edit Data">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.NID" 
                                           class="btn btn-outline-danger btn-sm" title="Hapus Data">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="card-footer bg-white text-muted text-end small py-2">
            Total Data: @Model.Count()
        </div>
    </div>
</div>